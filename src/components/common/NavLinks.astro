---
const ENLACES = [
	{ href: '#about-me', text: 'About Me' },
	{ href: '#skills', text: 'Tech Stack' },
	{ href: '#contact', text: 'Contact' },
]
---

<ul
	class="flex flex-col font-medium mt-4 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent bg-gray-800 border-gray-700"
>
	{
		ENLACES.map((link) => (
			<li>
				<a
					href={link.href}
					class="block py-2 px-3 md:p-0 rounded md:hover:bg-transparent md:border-0 md:hover:text-sky-700 text-white hover:bg-gray-700 hover:text-white"
				>
					{link.text}
				</a>
			</li>
		))
	}
</ul>
