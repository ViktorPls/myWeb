---
import NavLinks from './NavLinks.astro';
---

<div id="drawer" class="hidden md:hidden absolute top-0 left-0 h-screen w-screen mt-[65px] bg-black/90">
    <div class="container px-8 py-12">

        <NavLinks />

        <div class="mt-12 inline-block">
            <a
                href="www.google.com"
                class="text-lg bg-sky-600 rounded-lg px-4 py-2 flex flex-row items-center"
            >
                <span>Curriculum</span>
                <span class="ml-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                        ></path>
                    </svg>
                </span>
            </a>
        </div>

        <div class="mt-12 text-gray-300">
            <span class="text-lg font-light opacity-80"
                >Tambien me puedes encontrar en redes:</span
            >
            <ul class="flex flex-col gap-2.5 mt-6">
                <li>
                    <a
                        href="https://www.linkedin.com/in/victorgabrielvides/"
                        target="_blank"
                        title="Ir a Linkedin"
                    >
                        <span> </span>
                        Linkedin
                    </a>
                </li>
                <li>
                    <a
                        href="https://www.linkedin.com/in/victorgabrielvides/"
                        target="_blank"
                        title="Ir a Github"
                    >
                        <span> </span>
                        Github
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <NavLinks />
</div>