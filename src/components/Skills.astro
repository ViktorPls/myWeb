	{
		name: 'Javascript',
		icon: '/icons/javascript.svg',
	},
	{
		name: 'ReactJs',
		icon: '/icons/react.svg',
	},
	{
		name: 'VueJs',
		icon: '/icons/vue.svg',
	},
	{
		name: 'CSS',
		icon: '/icons/css.svg',
	},
	{
		name: 'HTML',
		icon: '/icons/html.svg',
	},
	{
		name: 'NodeJs',
		icon: '/icons/nodejs.svg',
	},
	{
		name: 'ExpessJs',
		icon: '/icons/expressjs.svg',
	},
	{
		name: 'Firebase',
		icon: '/icons/firebase.svg',
	},
